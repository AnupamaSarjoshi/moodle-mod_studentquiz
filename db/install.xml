<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/studentquiz/db" VERSION="20101203" COMMENT="XMLDB file for Moodle mod/studentquiz"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="studentquiz" COMMENT="Default comment for studentquiz, please edit me">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Course studentquiz activity belongs to"/>
        <FIELD NAME="coursemodule" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false" COMMENT="Coursemodule studentquiz activity belongs to"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="name field for moodle instances"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="true" SEQUENCE="false" COMMENT="General introduction of the studentquiz activity"/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false" COMMENT="Format of the intro field (MOODLE, HTML, MARKDOWN...)"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="false"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="grade" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="100" SEQUENCE="false" COMMENT="The maximum grade. Can be negative to indicate the use of a scale."/>
        <FIELD NAME="anonymrank" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1" SEQUENCE="false" COMMENT="Setting to show ranking anonym or not."/>
        <FIELD NAME="quiz_practice_behaviour" TYPE="char" LENGTH="400" NOTNULL="true" SEQUENCE="false" COMMENT="Displays the question behaviour selected by teachers"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="course" UNIQUE="false" FIELDS="course"/>
        <INDEX NAME="coursemodule" UNIQUE="false" FIELDS="coursemodule"/>
      </INDEXES>
    </TABLE>
    <TABLE NAME="studentquiz_vote" COMMENT="Store votes for questions">
        <FIELDS>
            <FIELD NAME="studentquiz_vote_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="studentquiz_vote_point" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="question_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Id of question"/>
            <FIELD NAME="user_userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Id of user"/>
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="studentquiz_vote_id"/>
            <KEY NAME="user_userid" TYPE="foreign" FIELDS="user_userid" REFTABLE="user" REFFIELDS="id"/>
            <KEY NAME="question_id" TYPE="foreign" FIELDS="question_id" REFTABLE="question" REFFIELDS="id"/>
        </KEYS>
        <INDEXES>
            <INDEX NAME="user_userid" UNIQUE="false" FIELDS="user_userid"/>
            <INDEX NAME="question_id" UNIQUE="false" FIELDS="question_id"/>
        </INDEXES>
    </TABLE>
    <TABLE NAME="studentquiz_comment" COMMENT="Store comments for questions">
        <FIELDS>
            <FIELD NAME="studentquiz_comment_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
            <FIELD NAME="studentquiz_comment_text" TYPE="text" NOTNULL="true" SEQUENCE="false"/>
            <FIELD NAME="question_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Id of question"/>
            <FIELD NAME="user_userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Id of user"/>
            <FIELD NAME="studentquiz_created" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        </FIELDS>
        <KEYS>
            <KEY NAME="primary" TYPE="primary" FIELDS="studentquiz_comment_id"/>
            <KEY NAME="user_userid" TYPE="foreign" FIELDS="user_userid" REFTABLE="user" REFFIELDS="id"/>
            <KEY NAME="question_id" TYPE="foreign" FIELDS="question_id" REFTABLE="question" REFFIELDS="id"/>
        </KEYS>
        <INDEXES>
            <INDEX NAME="user_userid" UNIQUE="false" FIELDS="user_userid"/>
            <INDEX NAME="question_id" UNIQUE="false" FIELDS="question_id"/>
        </INDEXES>
    </TABLE>
    <TABLE NAME="studentquiz_p_overview" COMMENT="Store studentquiz practice overview">
      <FIELDS>
          <FIELD NAME="studentquiz_p_overview_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
          <FIELD NAME="studentquiz_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
          <FIELD NAME="user_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Id of user"/>
          <FIELD NAME="question_category_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
          <KEY NAME="primary" TYPE="primary" FIELDS="studentquiz_p_overview_id"/>
          <KEY NAME="user_id" TYPE="foreign" FIELDS="user_id" REFTABLE="user" REFFIELDS="id"/>
          <KEY NAME="studentquiz_id" TYPE="foreign" FIELDS="studentquiz_id" REFTABLE="studentquiz" REFFIELDS="id"/>
          <KEY NAME="question_category_id" TYPE="foreign" FIELDS="question_category_id" REFTABLE="question_categories" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
      <TABLE NAME="studentquiz_p_session" COMMENT="Store studentquiz practice session">
          <FIELDS>
              <FIELD NAME="studentquiz_p_session_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
              <FIELD NAME="studentquiz_p_overview_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
              <FIELD NAME="question_usage_id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
              <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="inprogress" SEQUENCE="false"/>
              <FIELD NAME="total_no_of_questions" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
              <FIELD NAME="total_no_of_questions_right" TYPE="int" LENGTH="20" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
              <FIELD NAME="marks_obtained" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="2"/>
              <FIELD NAME="total_marks" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" DECIMALS="2"/>
              <FIELD NAME="practice_date" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
          </FIELDS>
          <KEYS>
              <KEY NAME="primary" TYPE="primary" FIELDS="studentquiz_p_session_id"/>
              <KEY NAME="question_usage_id" TYPE="foreign" FIELDS="question_usage_id" REFTABLE="question_usages" REFFIELDS="id"/>
              <KEY NAME="studentquiz_p_overview_id" TYPE="foreign" FIELDS="studentquiz_p_overview_id" REFTABLE="studentquiz_p_overview" REFFIELDS="studentquiz_p_overview_id"/>
          </KEYS>
      </TABLE>
  </TABLES>
</XMLDB>
